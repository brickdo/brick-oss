{
  "name": "@brick/server",
  "private": true,
  "//scripts": {
    "typeorm": "Run a typeorm CLI command. For now it depends on the server dependencies being built. Perhaps there is a better way."
  },
  "scripts": {
    "dev": "nest start --watch --preserveWatchOutput",
    "prebuild": "rimraf dist",
    "build": "nest build brick && nest build tg-bot",
    "start": "nest start",
    "start:tg-bot": "nest start tg-bot",
    "start:tg-bot:prod": "NODE_ENV=production node dist/apps/tg-bot/src/main",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/apps/brick/src/main",
    "typeorm": "turbo build -F ^... --output-logs=errors-only && ts-node --project ./tsconfig.json -r tsconfig-paths/register ../../node_modules/typeorm/cli.js --config libs/db/src/database.config.ts \"$@\"",
    "migration:run": "pnpm run typeorm migration:run",
    "migration:generate": "pnpm run typeorm migration:generate -n",
    "migration:revert": "pnpm run typeorm migration:revert",
    "schema:sync": "pnpm run typeorm schema:sync",
    "copy-frontend-builds": "rm -rf ../../build && mkdir ../../build && cp -r ../public-client/build ../../build/public-client && cp -r ../client/build ../../build/client",
    "check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/brick/test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.828.0",
    "@brick/lib": "workspace:*",
    "@brick/misc": "workspace:*",
    "@brick/themes": "workspace:*",
    "@nestjs/cli": "^8.1.6",
    "@nestjs/common": "^8.2.4",
    "@nestjs/core": "^8.2.4",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.2.4",
    "@nestjs/passport": "^8.0.1",
    "@nestjs/platform-express": "^8.2.4",
    "@nestjs/platform-socket.io": "^8.2.4",
    "@nestjs/schedule": "^1.1.0",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/swagger": "^5.1.5",
    "@nestjs/testing": "^8.2.4",
    "@nestjs/typeorm": "^8.0.2",
    "@nestjs/websockets": "^8.2.4",
    "@types/multer": "^1.4.13",
    "@types/uuid": "^8.3.3",
    "bowser": "^2.11.0",
    "file-type": "^16.5.4",
    "multer": "^2.0.1",
    "nest-router": "^1.0.9",
    "passport": "^0.5.2",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/passport": "^1.0.16",
    "@types/passport-github2": "^1.2.5",
    "@types/passport-google-oauth20": "^2.0.11",
    "@types/passport-jwt": "^3.0.6",
    "@types/passport-local": "^1.0.34"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/db/(.*)": "<rootDir>/libs/db/src/$1",
      "@app/db": "<rootDir>/libs/db/src",
      "@app/constants/(.*)": "<rootDir>/libs/constants/src/$1",
      "@app/constants": "<rootDir>/libs/constants/src",
      "@brick/(.*)": "<rootDir>/apps/brick/src/$1",
      "@brick": "<rootDir>/apps/brick/src",
      "@app/storages/(.*)": "<rootDir>/libs/storages/src/$1",
      "@app/storages": "<rootDir>/libs/storages/src"
    }
  },
  "volta": {
    "extends": "../../package.json"
  }
}