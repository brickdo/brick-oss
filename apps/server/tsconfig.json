{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2017",
    "lib": ["ESNext.Array"],
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@app/db": ["libs/db/src"],
      "@app/db/*": ["libs/db/src/*"],
      "@app/constants": ["libs/constants/src"],
      "@app/constants/*": ["libs/constants/src/*"],
      "@brick": ["apps/brick/src"],
      "@brick/*": ["apps/brick/src/*"],
      "@app/storages": ["libs/storages/src"],
      "@app/storages/*": ["libs/storages/src/*"],
      "@brick-shared/*": ["libs/shared/src/*"]
    }
  }
}